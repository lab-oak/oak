# Optional first argument: directory to prepend to PATH
if [ -n "$1" ]; then
    export PATH="$1:$PATH"
    echo "Prepended $1 to PATH"
fi
rm -rf cpp/libpkmn;
cd cpp/extern/engine;
zig build -Dtarget=x86_64-windows-gnu -Dshowdown -Dpic -Doptimize=Debug -Doption=ebc=false -Doption=miss=false -Doption=advance=false -Doption=key=true -Dlog -Dchance -Dcalc --prefix-lib-dir ../../../libpkmn/Debug/client;
ls ../../libpkmn/Debug/client;
zig build -Dtarget=x86_64-windows-gnu -Dshowdown -Dpic -Doptimize=Debug -Doption=ebc=false -Doption=miss=false -Doption=advance=false -Doption=key=true -Dchance -Dcalc --prefix-lib-dir ../../../libpkmn/Debug/chance;
ls ../../libpkmn/Debug/chance;
zig build -Dtarget=x86_64-windows-gnu -Dshowdown -Dpic -Doptimize=ReleaseFast -Doption=ebc=false -Doption=miss=false -Doption=advance=false -Doption=key=true -Dlog -Dchance -Dcalc --prefix-lib-dir ../../../libpkmn/ReleaseFast/client;
ls ../../libpkmn/ReleaseFast/client;
zig build -Dtarget=x86_64-windows-gnu -Dshowdown -Dpic -Doptimize=ReleaseFast -Doption=ebc=false -Doption=miss=false -Doption=advance=false -Doption=key=true -Dchance -Dcalc --prefix-lib-dir ../../../libpkmn/ReleaseFast/chance;
ls ../../libpkmn/ReleaseFast/chance;
cd ../../..
